@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Admin Home Page";
}

@model mcvhoconline.Models.Sua_SP_View_DTO


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Danh sách Sản Phẩm
            </div>
            <div class="card-body">
                <form action="/Admin/SuaSanPhamAction?MaSP=@Model.SanPham.MaSP" method="post" enctype="multipart/form-data">
                    <div class="form-floating mb-3">
                        <select class="form-select" name="MaLoai" id="sel1">
                            @foreach (var loai in Model.Loais)
                            {
                                <option value="@loai.MaLoai">@loai.TenLoai</option>
                            }
                        </select>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="inputEmail" name="TenSP" type="text" placeholder="name@example.com" value="@Model.SanPham.TenSP" required />
                        <label for="inputEmail">Tên SP</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="inputPassword" name="Gia" type="text" placeholder="Password" value="@Model.SanPham.Gia" required />
                        <label for="inputPassword">Giá</label>
                    </div>

                    <div class="form-floating mb-3">
                        <label class=""
                               for="inputGroupFile01">
                        </label>
                        <input name="UrlImage" class="form-control-file" type="file" id="formFile" value="@Model.SanPham.DuongDan" required>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="inputPassword" name="MoTa" type="text" placeholder="Password" value="@Model.SanPham.MoTa" required />
                        <label for="inputPassword">Mô tả</label>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <button type="submit" class="btn btn-primary">Sửa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

