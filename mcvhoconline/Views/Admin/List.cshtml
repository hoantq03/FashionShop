@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Admin Home Page";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>


        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Danh sách Sản Phẩm
            </div>
            <div class="card-body">
                <form action="/Admin/DanhSachSanPham" method="get" class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                    <div class="input-group">
                        <select class="form-select" id="sel1" name="loai">
                            @foreach (var loai in Model.Loais)
                            {
                                <option>@loai.TenLoai</option>
                            }
                        </select>
                        <input class="form-control" type="text" name="ten" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch">
                        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><svg class="svg-inline--fa fa-magnifying-glass" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="magnifying-glass" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"></path></svg><!-- <i class="fas fa-search"></i> Font Awesome fontawesome.com --></button>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Danh mục</th>
                            <th>Tên SP</th>
                            <th>Ảnh</th>
                            <th>Giá</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sanPham in Model.SanPhams)
                        {
                            <tr>
                                <td>@sanPham.Loai.TenLoai</td>
                                <td>@sanPham.TenSP</td>
                                <td><img style="width : 80px; height : 80px;" src="~/Content/Product/Image/@sanPham.DuongDan" alt="@sanPham.TenSP"></td>
                                <td>@sanPham.Gia</td>
                                <td><a href="/Admin/SuaSanPham?MaSP=@sanPham.MaSP" class="btn btn-outline-primary"><i class="bi bi-trash2-fill"></i> Edit</a></td>
                                <td><a href="/Shop/Details?MaSP=@sanPham.MaSP" class="btn btn-primary"><i class="bi bi-trash2-fill"></i> Details</a></td>
                                <td><a href="/Admin/Delete?MaSP=@sanPham.MaSP" class="btn btn-danger"><i class="bi bi-trash2-fill"></i> Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
