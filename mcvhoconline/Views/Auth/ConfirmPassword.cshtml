
@{
    ViewBag.Title = "ConfirmPassword";
    Layout = "~/Views/Shared/_LayoutUTHRAuth.cshtml";
}
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" id="resetPasswordForm">
                    <span class="login100-form-title p-b-26">
                        Reset Password
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-lock"></i>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input class="input100" type="password" name="pass">
                        <span class="focus-input100" data-placeholder="New Password"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input class="input100" type="password" name="repeat_password">
                        <span class="focus-input100" data-placeholder="Repeat Password"></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" onclick="initiatePasswordReset()">
                                Reset Password
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Remember your password?
                        </span>
                        <a class="txt2" href="login.html">
                            Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/UTHR/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/UTHR/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/UTHR/js/main.js"></script>

</body>
